root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
max_line_length = 120

[*.toml]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
# Actually one sentence per-line, but that means a hardcoded limit doesn't make sense.
max_line_length = 9999
indent_size = 2
